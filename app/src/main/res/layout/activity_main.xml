<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="UnusedAttribute,MissingPrefix,KeyboardInaccessibleWidget,ContentDescription,HardcodedText,SpUsage,NestedWeights,
    RtlHardcoded,RelativeOverlap,UselessParent,RtlSymmetry,DisableBaselineAlignment,UseCompoundDrawables,LabelFor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_camera_tv_retry"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="#3BFFE8"
            android:clickable="true"
            android:gravity="center"
            android:text="RETRY"
            android:textColor="#0c0c0c"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/activity_camera_tv_save"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="#3BFFE8"
            android:clickable="true"
            android:gravity="center"
            android:text="SAVE"
            android:textColor="#0c0c0c"
            android:textSize="18dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.hdd.camera_preview.CameraPreview
            android:id="@+id/activity_camera_cp_campreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/activity_camera_iv_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DDDDDD"
            android:scaleType="fitXY"
            android:visibility="gone" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#E6E6E6">

        <View
            android:id="@+id/activity_camera_v_capture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#ff0000"
            android:clickable="true" />
    </FrameLayout>
</LinearLayout>